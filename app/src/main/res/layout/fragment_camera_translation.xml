<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <org.opencv.android.JavaCamera2View
                android:layout_gravity="top"
                android:id="@+id/main_camera_tab_java_camera_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                opencv:show_fps="true" />
            <LinearLayout
                android:background="#26E6E8E7"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarStyle">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageButton
                    android:src="@drawable/ic_image_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_camera_tab_load_image_from_file"
                    style="?android:attr/buttonBarButtonStyle"/>
                <ImageButton
                    android:src="@drawable/ic_flash_off_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_camera_tab_flash"
                    style="?android:attr/buttonBarButtonStyle"/>
                <ImageButton
                    android:src="@drawable/ic_stop_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_camera_tab_stop_or_resume"
                    style="?android:attr/buttonBarButtonStyle"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_photo_light"
                    android:id="@+id/main_camera_tab_save_image"
                    style="?android:attr/buttonBarButtonStyle"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>